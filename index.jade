//layout.jadeを呼び出し
extends layout
block title
  title To Do List
  
block content 
  h2 Todo
  // ToDo入力フォームを作成する
  .form
    form#form
      p
        label(for='text') 内容
        input#text(type='text',name='text')
      p
        label(for='limit') 期限
        input#limit(type='date',name='limit')
      p
        input(type='submit',value='登録する')
  // ToDo一覧を表示する
  .list

// jQueryとtodo.jsを読み込む
block scripts
  script(src='http://code.jquery.com/jquery-2.0.0.min.js')
  script(src='todo.js')
